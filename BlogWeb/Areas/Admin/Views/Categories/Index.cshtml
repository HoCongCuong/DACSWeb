@model IEnumerable<BlogWeb.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}




<a class="btn btn-primary mb-1" asp-action="Create">Create New</a>
<div class="container-fluid">
    <div class="card">
        <div class="card-header bg-primary">
            <h4 class="card-title text-white">List of Users</h4>
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover" id="datatablesSimple">
                <thead>
                    <tr>
                        <th>Thể loại</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.CategoryName)
                            </td>
                            <td>
                                <div class="col-5 text-right d-flex justify-content-center flex-column">
                                    <div class="d-flex justify-content-end align-items-center">
                                        <a class="btn btn-warning " asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a> |
                                        <form class="" asp-action="Delete" asp-route-id="@item.CategoryId" onsubmit="return confirm('Do you want to delete this post?')">
                                            <button type="submit" class="btn btn-danger">Delete</button>
                                        </form>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
                   
            </table>
        </div>
    </div>
</div>
