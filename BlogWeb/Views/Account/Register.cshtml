@model BlogWeb.ViewModels.Registervm

@{
    ViewData["Title"] = "Register";
    Layout = "_LoginLayout";
}

<div class="container">
    <div class="Registration">
        <!-- Registration Form -->
        <div class="form signup">
            <span class="title">Registration</span>
            <form asp-action="Register" asp-controller="Account" method="post">
                <div class="input-field">
                    <input asp-for="FullName" type="text" placeholder="Enter your name" required>
                    <i class="uil uil-user"></i>
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="input-field">
                    <input asp-for="Email" type="text" placeholder="Enter your email" required>
                    <i class="uil uil-envelope icon"></i>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="input-field">
                    <input asp-for="Password" type="password" class="password" placeholder="Create a password" autocomplete="new-password" required>
                    <i class="uil uil-lock icon"></i>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                
                <div class="btn-submit input-field button">
                    <input type="submit" value="Signup">
                </div>
            </form>
            <div class="login-signup">
                <span class="text">
                    Already a member?
                    <a href="/login" class="text login-link">Login Now</a>
                </span>
            </div>
        </div>
    </div>
</div>