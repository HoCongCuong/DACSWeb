@using X.PagedList.Mvc.Core;
@using X.PagedList.Web.Common;
@model BlogWeb.ViewModels.Homevm
@using X.PagedList


<partial name="layoutblogHeder" />

<main>
    <div class="main">

        <div class="container">

            <!--
              - BLOG SECTION
            -->

            <div class="blog">

                <h2 class="h2">Latest Blog Post</h2>

                <div class="blog-card-group">

                    @foreach (var post in Model.Posts!)
                    {
                        <div class="blog-card">

                            <div class="blog-card-banner">
                                <img src="~/thumbnails/@post.ThumbnailUrl"
                                     width="250" class="blog-banner-img">
                            </div>

                            <div class="blog-content-wrapper">

                                <span class="blog-topic text-tiny">
                                    @post.categorys!.CategoryName
                                </span>
                                <h3>
                                    <a asp-controller="Post" asp-action="detail" asp-route-slug="@post.Slug" class="h3">
                                        @post.Title
                                    </a>
                                    
                                </h3>

                                <p class="blog-text">
                                    @post.ShortDescription
                                </p>

                                <div class="wrapper-flex">
                                    <div class="profile-wrapper">
                                        <img src="~/thumbnails/@post.ApplicationUser!.imgUser" alt="Julia Walker" width="50">
                                    </div>
                                    <div class="wrapper">
                                        <span>@post.ApplicationUser!.FullName</span>
                                        <p class="text-sm">
                                            @post.CreatedDate.ToShortDateString()
                                        </p>
                                    </div>

                                </div>

                            </div>
                        </div>
                    }                 
                </div>
            </div>
            <!--
              - ASIDE
            -->

            <div class="aside">

                @*<div class="topics">

                    <h2 class="h2">Topics</h2>

                    <a href="#" class="topic-btn">
