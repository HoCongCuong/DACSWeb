                    </a>

                    <a href="#" class="topic-btn">
                        <div class="icon-box">
                            <ion-icon name="accessibility-outline"></ion-icon>
                        </div>

                        <p>Cộng đồng</p>
                    </a>

                    <a href="#" class="topic-btn">
                        <div class="icon-box">
                            <ion-icon name="rocket-outline"></ion-icon>
                        </div>

                        <p>Web Performance</p>
                    </a>

                </div>*@

                <div class="tags">

                    <h2 class="h2">Tags</h2>
                    <div class="wrapper">
                        <span class="hashtag">#onhiem</span>
                        <span class="hashtag">#thientai</span>
